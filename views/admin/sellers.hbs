
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sellers - Admin Dashboard</title>
    <link rel="stylesheet" href="/static/css/styleAdmin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body class="admin-body">
    {{> admin/sidebar }}

    <div class="admin-main">
        <h2>Sellers Management</h2>
        <div class="admin-sections">
            <section class="sellers-section">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Seller ID</th>
                            <th>Shop Name</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Join Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each sellers}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.shopName}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.createdAt}}</td>
                            <td>
                                <a href="/admin/sellers/{{this._id}}" class="btn-view">View Details</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
</body>
</html>
