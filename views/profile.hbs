<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - {{user.name}}</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Caveat:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <header class="header">
        <a href="/"><h1>SHiLPP</h1></a>
        <div class="header-icons">
            <a href="/"><i class="fas fa-home"></i></a>
            <a href="/logout" class="auth-link"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </header>

    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="profile-info">
                <h2>{{user.name}}</h2>
                <p><i class="fas fa-envelope"></i> {{user.email}}</p>
            </div>
        </div>

        <div class="orders-section">
            <h3><i class="fas fa-shopping-bag"></i> Your Orders</h3>
            {{#if orders.length}}
                <div class="orders-grid">
                    {{#each orders}}
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-id">
                                    <small>Order ID</small>
                                    <span>{{this._id}}</span>
                                </div>
                                <span class="order-status {{this.status}}">{{this.status}}</span>
                            </div>
                            <div class="order-items">
                                {{#each this.items}}
                                    <div class="order-item">
                                        <div class="item-name">{{this.productId.productName}}</div>
                                        <div class="item-details">
                                            <span>Qty: {{this.quantity}}</span>
                                            <span>₹{{this.price}}</span>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                            <div class="order-footer">
                                <div class="order-total">
                                    <strong>Total: ₹{{this.totalAmount}}</strong>
                                </div>
                                <div class="order-date">
                                    <small><i class="far fa-calendar-alt"></i> {{this.orderedAt}}</small>
                                </div>
                            </div>
                            <div class="order-address">
                                <i class="fas fa-map-marker-alt"></i>
                                <small>
                                    {{this.shippingAddress.address}}, 
                                    {{this.shippingAddress.city}}, 
                                    {{this.shippingAddress.state}}, 
                                    {{this.shippingAddress.country}} - 
                                    {{this.shippingAddress.pincode}}
                                </small>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="no-orders">
                    <i class="fas fa-box-open"></i>
                    <p>No orders yet</p>
                    <a href="/" class="shop-now-btn">Shop Now</a>
                </div>
            {{/if}}
        </div>
    </div>

    <div class="cart-icon">
        <a href="/cart" style="text-decoration: none; color: white;"><i class="fas fa-shopping-cart"></i></a>
    </div>
</body>
</html>
